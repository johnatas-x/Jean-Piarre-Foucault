{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(arg0)",
    ":reviewer(arg0)"
  ],
  "assignees": [
    "johnatas-x"
  ],
  "prHourlyLimit": 3,
  "ignoreDeps": [
    "gloursdocker/docker"
  ],
  "packageRules": [
    {
      "groupName": "Drupal core",
      "matchPackageNames": [
        "drupal/core-**"
      ]
    },
    {
      "groupName": "NPM asset",
      "matchPackageNames": [
        "npm-asset/**"
      ]
    },
    {
      "groupName": "Workflows",
      "matchPackageNames": [
        "actions/cache",
        "actions/checkout",
        "actions/setup-python",
        "EndBug/add-and-commit",
        "nick-invision/retry",
        "shivammathur/setup-php",
        "tonybaloney/pycharm-security"
      ]
    },
    {
      "groupName": "Docker images",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "custom.regex",
    "dockerfile",
    "github-actions",
    "pip_requirements"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "PHP_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/drupal-php",
      "versioningTemplate": "loose",
      "autoReplaceStringTemplate": "PHP_TAG={{{newValue}}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "MARIADB_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/mariadb",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "NGINX_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/nginx",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "VARNISH_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/varnish",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "MEMCACHED_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/memcached",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "PYTHON_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "python",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}-alpine"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.env\\.example$/"
      ],
      "matchStrings": [
        "TRAEFIK_TAG=(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "traefik",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "{{{currentValue}}}"
    }
  ]
}
