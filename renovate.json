{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(arg0)",
    ":reviewer(arg0)"
  ],
  "assignees": [
    "johnatas-x"
  ],
  "prHourlyLimit": 3,
  "postUpdateOptions": [
    "composerWithAll"
  ],
  "packageRules": [
    {
      "groupName": "Drupal core",
      "matchPackageNames": [
        "drupal/core-**"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "groupName": "NPM asset",
      "matchPackageNames": [
        "npm-asset/**"
      ]
    },
    {
      "groupName": "Workflows",
      "matchPackageNames": [
        "actions/cache",
        "actions/checkout",
        "actions/setup-python",
        "EndBug/add-and-commit",
        "nick-invision/retry",
        "shivammathur/setup-php",
        "tonybaloney/pycharm-security"
      ]
    }
  ],
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "github-actions",
    "pip_requirements",
    "composer"
  ]
}
