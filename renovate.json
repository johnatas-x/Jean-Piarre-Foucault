{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(arg0)",
    ":reviewer(arg0)"
  ],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "groupName": "Drupal core",
      "matchPackageNames": [
        "drupal/core-**"
      ]
    },
    {
      "groupName": "NPM asset",
      "matchPackageNames": [
        "npm-asset/**"
      ]
    },
    {
      "groupName": "CI",
      "matchPackageNames": [
        "actions/cache",
        "actions/checkout",
        "nick-invision/retry",
        "shivammathur/setup-php"
      ]
    }
  ]
}
