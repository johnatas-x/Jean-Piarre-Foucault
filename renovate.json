{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(arg0)",
    ":reviewer(arg0)"
  ],
  "assignees": ["johnatas-x"],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "groupName": "Drupal core",
      "matchPackageNames": [
        "drupal/core-**"
      ]
    },
    {
      "groupName": "NPM asset",
      "matchPackageNames": [
        "npm-asset/**"
      ]
    },
    {
      "groupName": "Workflows",
      "matchPackageNames": [
        "actions/cache",
        "actions/checkout",
        "actions/setup-python",
        "EndBug/add-and-commit",
        "nick-invision/retry",
        "shivammathur/setup-php",
        "tonybaloney/pycharm-security"
      ]
    },
    {
      "groupName": "Docker images",
      "matchManagers": ["regex"],
      "matchDatasources": ["docker"]
    }
  ],
  "labels": ["dependencies"],
  "enabledManagers": [
    "regex",
    "dockerfile",
    "github-actions",
    "pip_requirements"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["PHP_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/drupal-php",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["MARIADB_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/mariadb",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["NGINX_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/nginx",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["VARNISH_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/varnish",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["MEMCACHED_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "wodby/memcached",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}"
    },
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["PYTHON_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "python",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}-alpine"
    },
    {
      "fileMatch": ["^\\.env\\.example$"],
      "matchStrings": ["TRAEFIK_TAG=(?<currentValue>[\\w\\.-]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "traefik",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "{{{currentValue}}}"
    }
  ]
}
