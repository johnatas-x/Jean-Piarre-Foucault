{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignee(arg0)",
    ":reviewer(arg0)"
  ],
  "assignees": [
    "johnatas-x"
  ],
  "prHourlyLimit": 3,
  "postUpdateOptions": [
    "composerWithAll"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "roave/security-advisories"
      ],
      "enabled": false
    },
    {
      "groupName": "Drupal core",
      "matchPackageNames": [
        "drupal/core-**"
      ],
      "postUpdateOptions": [
        "composerWithAll"
      ]
    },
    {
      "groupName": "Composer",
      "matchPackageNames": [
        "composer/composer"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": true,
      "commitMessageTopic": "{{depName}}"
    },
    {
      "groupName": "NPM asset",
      "matchPackageNames": [
        "npm-asset/**"
      ]
    },
    {
      "groupName": "Workflows",
      "matchPackageNames": [
        "actions/cache",
        "actions/checkout",
        "actions/setup-python",
        "EndBug/add-and-commit",
        "nick-invision/retry",
        "shivammathur/setup-php",
        "tonybaloney/pycharm-security"
      ]
    },
    {
      "groupName": "Angry bearded",
      "matchPackageNames": [
        "johnatas-x/angry-bearded"
      ],
      "postUpdateOptions": [
        "composerWithAll"
      ]
    }
  ],
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "github-actions",
    "pip_requirements",
    "composer",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.ddev/config\\.yaml$/"
      ],
      "matchStrings": [
        "composer_version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "composer",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.ddev/\\.env\\.varnish$/"
      ],
      "matchStrings": [
        "VARNISH_DOCKER_IMAGE=\\s*\"(?<depName>[\\w\\-/\\.]+):(?<currentValue>\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker"
    }

  ]
}
